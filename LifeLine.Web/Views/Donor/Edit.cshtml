@model LifeLine.Web.ViewModel.DonorVM

<h2>Edit Donor</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container well">
        <div class="container">
            <div class="row">
                <div class="form-group">

                    <div class="col-md-4">
                        <label for="FirstName">First Name</label>
                        @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control", placeholder = "First Name"})
                        @Html.ValidationMessageFor(model => model.FirstName, "", new {@class = "text-danger"})
                    </div>

                    <div class="col-md-4">
                        <label for="LastName">Last Name</label>
                        @Html.TextBoxFor(model => model.LastName, new {@class = "form-control", placeholder = "Last Name"})
                        @Html.ValidationMessageFor(model => model.LastName, "", new {@class = "text-danger"})
                    </div>

                </div>

            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4">
                        <label for="PhoneNumber">Phone</label>
                        @Html.TextBoxFor(model => model.PhoneNumber, new {@class = "form-control", placeholder = "Phone"})
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new {@class = "text-danger"})
                    </div>
                    <div class="col-md-4">
                        <label for="Email">Email</label>
                        @Html.TextBoxFor(model => model.Email, new {@class = "form-control", placeholder = "Email"})
                        @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4">
                        <label for="CampId">Camp</label>
                        @Html.DropDownListFor(m => m.CampId, Model.CampsList, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CampId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="container">
        <div class="row top-buffer">
            <div class="form-group">
                <div class="col-xs-offset-2 col-md-offset-5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index", "Donor", new { @class = "btn btn-warning" })
                </div>

            </div>
        </div>
    </div>
    
}

